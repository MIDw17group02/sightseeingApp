<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="5dp"
    android:maxWidth="@dimen/grid_poi_element_width"
    android:minWidth="@dimen/grid_poi_element_width"
    android:maxHeight="@dimen/grid_poi_element_width"
    android:minHeight="@dimen/grid_poi_element_width"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/poi_grid_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/grid_poi_element_textSize"/>

    <ImageView
        android:id="@+id/poi_grid_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.constraint.ConstraintLayout>